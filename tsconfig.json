{
  "compilerOptions": {
    "target": "esnext", // or "es5" for wider compatibility
    "module": "commonjs", // or "esnext" if you want to use ES modules
    "outDir": "./dist", // Output directory for compiled files
    "declaration": true, // Generates .d.ts files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "jsx": "react-jsx" // or "react-jsx" for React 17+ or "react-native" for React Native
  },
  "exclude": ["node_modules", "dist"],  // Exclude node_modules and dist folders from compilation
  "include": ["src/**/*"]  // Include your source files
}
