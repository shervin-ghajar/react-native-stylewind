{
  "name": "react-native-stylewind-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter=rn-stylewind build",
    "lint": "pnpm --filter=rn-stylewind lint",
    "init-rn-stylewind": "pnpm --filter=rn-stylewind init-rn-stylewind",
    "generate": "pnpm --filter=rn-stylewind generate",
    "compile": "pnpm --filter=rn-stylewind compile",
    "docs:start": "pnpm --filter=docs start",
    "docs:build": "pnpm --filter=docs build",
    "docs:deploy": "pnpm --filter=docs deploy",
    "publish:stylewind": "pnpm --filter=rn-stylewind stylewind:publish",
    "publish:all": "pnpm publish:stylewind && docs:deploy"
  }
}
